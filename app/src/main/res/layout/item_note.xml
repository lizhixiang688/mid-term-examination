<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txt_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asddasd"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
   <TextView
       android:id="@+id/txt_1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="提醒时间："
       android:textSize="15sp"
       android:textColor="#fff"
       android:layout_marginEnd="20dp"
       app:layout_constraintTop_toBottomOf="@id/txt_2"
       app:layout_constraintLeft_toLeftOf="@id/txt_2"/>
    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="截止时间："
        android:textSize="15sp"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@id/txt_note"
        app:layout_constraintLeft_toLeftOf="@id/txt_note"/>
    <TextView
        android:id="@+id/txt_deadine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020年12月28日"
        android:textSize="15sp"
        android:textColor="#fff"
        app:layout_constraintTop_toTopOf="@id/txt_2"
        app:layout_constraintLeft_toRightOf="@id/txt_2"/>
    <TextView
        android:id="@+id/txt_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020年12月28日"
        android:textSize="15sp"
        android:textColor="#fff"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="@id/txt_1"
        app:layout_constraintLeft_toRightOf="@id/txt_1"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>