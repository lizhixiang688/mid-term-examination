<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/icon_2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_user"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/icon_head"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/txt_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入名字"
            android:textColor="#000"
            android:textSize="23sp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="20dp"
            />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_function"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="功能模块"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintLeft_toRightOf="@id/img_1"
                app:layout_constraintTop_toTopOf="@id/img_1" />

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_honor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="成就"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintLeft_toRightOf="@id/img_2"
                app:layout_constraintTop_toTopOf="@id/img_2" />

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_time"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="日期与时间"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintLeft_toRightOf="@id/img_3"
                app:layout_constraintTop_toTopOf="@id/img_3" />

            <ImageView
                android:id="@+id/img_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_locate"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="定位"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintLeft_toRightOf="@id/img_4"
                app:layout_constraintTop_toTopOf="@id/img_4" />

            <ImageView
                android:id="@+id/img_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_morefunction"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="更多功能"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintLeft_toRightOf="@id/img_5"
                app:layout_constraintTop_toTopOf="@id/img_5" />


            <ImageView
                android:id="@+id/img_6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="80dp"
                android:src="@drawable/icon_share"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="分享"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintLeft_toRightOf="@id/img_6"
                app:layout_constraintTop_toTopOf="@id/img_6" />

            <ImageView
                android:id="@+id/img_7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_help"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="帮助"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintLeft_toRightOf="@id/img_7"
                app:layout_constraintTop_toTopOf="@id/img_7" />

            <ImageView
                android:id="@+id/img_8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_collect"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="收藏"
                android:textColor="#000"
                android:textSize="15sp"
                app:layout_constraintLeft_toRightOf="@id/img_8"
                app:layout_constraintTop_toTopOf="@id/img_8" />

            <Button
                android:id="@+id/login_out"
                android:layout_width="230dp"
                android:layout_height="44dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_button"
                android:text="退出登录"
                android:textColor="#FF0010"
                android:textSize="17sp"
                android:layout_marginBottom="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_8"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</LinearLayout>